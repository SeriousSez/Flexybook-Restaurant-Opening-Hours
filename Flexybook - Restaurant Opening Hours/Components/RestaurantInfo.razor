@* RestaurantInfo.razor *@
<div class="restaurant-card">
    <div class="header">
        <div class="title-row">
            <h1 class="restaurant-title">Aalborg</h1>
            <span class="favourite-icon active">&#9825;</span>
        </div>
        <div class="information-row">
            <span class="status">• Open</span>
            <div class="information-divider">·</div>
            <div class="address">Østergade 27, 9000 · Aalborg</div>
        </div>
        <div class="contact-row">
            <a href="tel:+45-11-22-33-44" class="contact-block" title="Telephone">
                <svg width="25" height="25" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <rect x="8" y="6" width="22" height="34" rx="3" stroke="#7cdb6b" stroke-width="2" fill="none" />
                    <rect x="15" y="34" width="8" height="2" rx="1.5" fill="#7cdb6b" />
                </svg>
                @* <a href="tel:+45-11-22-33-44" class="contact-tel" title="Telephone">+45 11 22 33 44</a> *@
                <span class="contact-tel">+45 11 22 33 44</span>
            </a>
            <a href="mailto:aalborg@flexybox.com" class="contact-block" title="Email">
                <span class="icon contact-mail">&#64</span>
                @* <a href="mailto:aalborg@flexybox.com" class="contact-email" title="Email">aalborg@flexybox.com</a> *@
                <span class="contact-email">aalborg@flexybox.com</span>
            </a>
            <div class="contact-block">
                <svg width="25" height="25" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M12 28v-4c0-6.627 5.373-12 12-12s12 5.373 12 12v4" stroke="#A3E3C3" stroke-width="2.5" fill="none" />
                    <rect x="10" y="28" width="6" height="8" rx="3" stroke="#A3E3C3" stroke-width="2" />
                    <rect x="32" y="28" width="6" height="8" rx="3" stroke="#A3E3C3" stroke-width="2" />
                    <rect x="21" y="37.8" width="6" height="4" rx="1.5" fill="#A3E3C3" />
                    <path d="M35 36 Q37 40 25 40" stroke="#A3E3C3" stroke-width="2" fill="none" stroke-linecap="round" />
                </svg>
            </div>
        </div>
    </div>
    <div class="image-gallery-scroll">
        <div class="image-gallery-inner">
            <img src="/images/restaurant-interior.jpg" alt="Restaurant interior" class="image" />
            <img src="/images/lee-campbell.jpg" alt="Restaurant view" class="image" />
        </div>
    </div>
    <div class="opening-hours-section">
        <h2>Opening hours</h2>
        <div class="tabs-scroll">
            <div class="tabs-inner">
                <button class="tab active">Restaurant</button>
                <button class="tab">Takeaway</button>
                <button class="tab">Buffet</button>
                <button class="tab">Special Events for Groups</button>
            </div>
        </div>
        <table class="hours-table">
            <tr><td>Monday - Thursday</td><td class="hours">07:00 - 22:00</td></tr>
            <tr><td>Friday</td><td class="hours">07:00 - 22:00</td></tr>
            <tr><td>Saturday</td><td class="hours">07:00 - 22:00</td></tr>
            <tr><td>Sunday</td><td class="hours">07:00 - 22:00</td></tr>
            <tr><td><span class="holiday">Holidays</span></td><td class="hours">Closed</td></tr>
        </table>
    </div>
</div>